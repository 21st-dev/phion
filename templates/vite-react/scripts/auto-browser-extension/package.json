{
  "name": "phion-dev-tools",
  "displayName": "Phion Dev Tools",
  "description": "Tools for Phion development",
  "version": "0.0.7",
  "publisher": "phion",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "phion.startProject",
        "title": "Phion: Start Project",
        "icon": "$(play)"
      },
      {
        "command": "phion.openPreview",
        "title": "Phion: Open Preview",
        "icon": "$(browser)"
      },
      {
        "command": "phion.showConsoleLogs",
        "title": "Phion: Show Console Logs",
        "icon": "$(console)"
      },
      {
        "command": "phion.toggleAiChat",
        "title": "Toggle AI Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "phion.toggleAiChat",
          "when": "phion.simpleBrowserOpen",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "phion.toggleAiChat",
          "when": "true"
        }
      ],
      "editor/title/run": [
        {
          "command": "phion.startProject",
          "group": "1_run@1"
        },
        {
          "command": "phion.openPreview",
          "group": "1_run@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "phion.startProject",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "true"
      },
      {
        "command": "phion.openPreview",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "true"
      },
      {
        "command": "phion.toggleAiChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "true"
      }
    ]
  },
  "scripts": {
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm ovsx publish --no-dependencies --pat",
    "publish:vscode": "pnpm vsce publish --no-dependencies",
    "vscode:prepublish": "pnpm run esbuild-base --minify",
    "esbuild-base": "esbuild \"./src/extension.ts\" --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.326",
    "@types/node": "^24.0.3",
    "@types/vscode": "^1.81.0",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.25.5",
    "ovsx": "^0.10.4",
    "vsce": "^2.15.0"
  },
  "license": "MIT",
  "dependencies": {
    "@types/debug": "^4.1.12",
    "debug": "^4.4.1",
    "ws": "^8.18.2"
  }
}
