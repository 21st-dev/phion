# Shipvibes.dev Environment Variables
# Скопируйте этот файл в .env.local и заполните реальными значениями

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase Public Configuration (для авторизации пользователей)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Google OAuth Configuration (для Supabase Auth)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_SECRET=your-google-oauth-secret

# GitHub App Configuration (для автономной работы с GitHub API)
GITHUB_APP_ID=
GITHUB_APP_INSTALLATION_ID=
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your-github-app-private-key-content
-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=

# Cloudflare R2 Configuration (будет убрано после миграции)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=shipvibes-storage

# Netlify Configuration
NETLIFY_ACCESS_TOKEN=your-netlify-access-token

# WebSocket Server Configuration
WS_PORT=8080
ALLOWED_ORIGINS=http://localhost:3000,https://shipvibes.dev
WEBSOCKET_SERVER_URL=http://localhost:8080

# Ngrok Configuration (для development webhooks)
NGROK_AUTHTOKEN=your-ngrok-authtoken

# Next.js Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:3000/api 

