# Phion.dev Environment Variables
# Copy this file to .env.local and fill with real values

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase Public Configuration (for user authentication)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Google OAuth Configuration (for Supabase Auth)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_SECRET=your-google-oauth-secret

# GitHub OAuth Configuration (for Supabase Auth)
GITHUB_OAUTH_CLIENT_ID=your-github-oauth-client-id
GITHUB_OAUTH_SECRET=your-github-oauth-secret

# GitHub App Configuration (for standalone GitHub API access)
GITHUB_APP_ID=
GITHUB_APP_INSTALLATION_ID=
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your-github-app-private-key-content
-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=

# Cloudflare R2 Configuration (will be removed after migration)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=shipvibes-storage

# Netlify Configuration
NETLIFY_ACCESS_TOKEN=your-netlify-access-token

# 21st.dev Subscription API (for subscription checks)
SUBSCRIPTION_API_KEY=your-21st-dev-api-key

# Development: Skip subscription check (set to 'true' to bypass subscription validation in dev)
SKIP_SUBSCRIPTION_CHECK=false

# WebSocket Server Configuration
WS_PORT=8080
ALLOWED_ORIGINS=http://localhost:3000,https://shipvibes.dev
WEBSOCKET_SERVER_URL=http://localhost:8080

# Environment Configuration (for correct WebSocket URL in templates)
NODE_ENV=development  # for local development uses ws://localhost:8080
# NODE_ENV=production  # for production uses wss://api.phion.dev

# Ngrok Configuration (for development webhooks)
NGROK_AUTHTOKEN=your-ngrok-authtoken

# Next.js Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:3000/api 

# Toolbar Auto-Update System  
TOOLBAR_UPDATE_ENDPOINT=http://localhost:3004/api/toolbar
NEXT_PUBLIC_TOOLBAR_UPDATE_ENDPOINT=http://localhost:3004/api/toolbar

# Cloudflare R2 Storage (for toolbar auto-updates)
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Next.js App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3004
NEXT_PUBLIC_API_URL=http://localhost:3004

# GitHub App Configuration
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour-github-private-key\n-----END RSA PRIVATE KEY-----"
GITHUB_ORG=your-github-org

# Netlify Configuration
NETLIFY_TOKEN=your-netlify-token

